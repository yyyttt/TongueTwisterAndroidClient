<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sliding_menu"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal" 
        android:background="@drawable/selector_tv_fragment_menu"
        >

        <ImageView
            android:id="@+id/iv_head_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="TODO"
            android:src="@drawable/head_portrait_secret" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/text_fragment_menu"
            android:layout_width="wrap_content"
            android:text="请登录"
             />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical" >
        <WebView android:id="@+id/wv_logout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>"
        <TextView
            android:id="@+id/tv_about_us"
            style="@style/text_fragment_menu"
            android:text="关于我们"
           />

        <TextView
            android:id="@+id/tv_updating_online"
            style="@style/text_fragment_menu"
            android:text="在线升级"/>
        <TextView
            android:id="@+id/tv_share_online"
            style="@style/text_fragment_menu"
            android:text="随时分享"/>
        <TextView
            android:id="@+id/tv_feedback_online"
            style="@style/text_fragment_menu"
            android:text="意见反馈"/>
        <TextView
            android:id="@+id/tv_logout"
            style="@style/text_fragment_menu"
            android:text="退出登录"/>
    </LinearLayout>
    
</LinearLayout>