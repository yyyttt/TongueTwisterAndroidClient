<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_sliding_menu">

    <android.support.v4.widget.SlidingPaneLayout
        android:id="@+id/slidingpanellayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" >
        
        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/slidingpane_menu"
                android:name="team.abc.tonguetwister.fragment.SlidingMenuFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/slidingpane_content"
                android:name="team.abc.tonguetwister.fragment.SlidingContentFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

       
    </android.support.v4.widget.SlidingPaneLayout>  

</LinearLayout>